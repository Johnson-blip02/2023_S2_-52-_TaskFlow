<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskFlow.View.Timer2"
             Title="Timer2"
             Background="#2B0B98">

    <StackLayout
        VerticalOptions="Center">

        <Label
            x:Name="timeLabel"
            Text="0:000"
            FontSize="Header"
            TextColor="White"
            HorizontalTextAlignment="Center"/>

        <StackLayout
            Orientation="Horizontal"
            HorizontalOptions="Center"
            Spacing="12"
            Margin="0,60,0,0">

            <ImageButton
                x:Name="startStopButton"
                Clicked="OnStart"
                Source="play"
                Background="Transparent"
                HeightRequest="60"
                WidthRequest="60"/>

            <ImageButton
                Source="reset"
                Clicked="OnReset"
                BackgroundColor="Transparent"
                HeightRequest="60"
                WidthRequest="60"/>
            
        </StackLayout>

    </StackLayout> 
    
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskFlow.View.Components.TaskReminderComponent"
             x:Name="this">
    <VerticalStackLayout>
        <!--#region ReminderSelection-->
        <Label Text="Enable Reminders" />
        <Switch Toggled="Switch_Toggled"/>
        <Label Text="Reminder Duration"/>
        <ImageButton ToolTipProperties.Text="How long before the task is due to send a reminder"></ImageButton>
        <Picker ItemsSource="{Binding TimeNotifyList, Source={x:Reference this}}" SelectedItem="{Binding NotifyTime, Source={x:Reference this}}"></Picker>
        <!--#endregion-->
    </VerticalStackLayout>
</ContentView>

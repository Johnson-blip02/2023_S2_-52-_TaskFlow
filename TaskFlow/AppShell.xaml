<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskFlow.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaskFlow"
    xmlns:views="clr-namespace:TaskFlow.View"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" Route="ParentRoute">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="NewTodoPage"
            ContentTemplate="{DataTemplate views:NewTodoPage}"
            Route="NewTodoPage"
            />
    </FlyoutItem>

</Shell>

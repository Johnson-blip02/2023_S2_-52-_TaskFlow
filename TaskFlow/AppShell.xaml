<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskFlow.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaskFlow"
    xmlns:views="clr-namespace:TaskFlow.View"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" Route="ParentRoute">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="NewTodoPage"
            ContentTemplate="{DataTemplate views:NewTodoPage}"
            Route="NewTodoPage"
            />
        <ShellContent
            Title="Todo List"
            ContentTemplate="{DataTemplate views:ToDoPage}"
            Route="ToDoPage"
            />
    </FlyoutItem>

    <FlyoutItem FlyoutItemIsVisible="False">
        <Tab Icon="todo.png">
            <ShellContent Title="Todo"
                      ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Icon="schedule.png">
            <ShellContent Title="Scheduler"
                      ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Icon="calendar.png">
            <ShellContent Title="Calendar"
                      ContentTemplate="{DataTemplate local:CalendarPage}" />
        </Tab>
        <Tab Icon="timer.png">
            <ShellContent Title="Pomodoro Timer"
                      ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Icon="notes.png">
            <ShellContent Title="Notes"
                      ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem x:Name="MenuItemProfile" Title="Profile">
        <ShellContent Title="Profile" FlyoutItemIsVisible="False"
                      ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Archive">
        <ShellContent Title="Archive"
                      ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Recycle Bin">
        <ShellContent Title="Recycle Bin"
                      ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
    <MenuItem Text="Dark Mode"></MenuItem>
    <FlyoutItem Title="Notifications">
        <ShellContent Title="Notifications"
                      ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
</Shell>
